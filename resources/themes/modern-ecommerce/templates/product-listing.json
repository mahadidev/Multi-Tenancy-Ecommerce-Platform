{
  "page": {
    "title": "Shop - All Products",
    "slug": "shop",
    "type": "product-listing",
    "seo": {
      "meta_title": "Shop All Products - Modern Store",
      "meta_description": "Browse our complete collection of quality products. Filter by category, price, and more to find exactly what you need.",
      "meta_keywords": "shop, products, online store, categories, filters"
    }
  },
  "sections": [
    {
      "id": "page-header",
      "name": "Page Header",
      "type": "header",
      "settings": {
        "background_color": "gray-50",
        "padding_top": "40px",
        "padding_bottom": "40px"
      },
      "components": [
        {
          "type": "breadcrumb",
          "content": {
            "items": [
              { "label": "Home", "url": "/" },
              { "label": "Shop", "url": "/shop", "active": true }
            ]
          }
        },
        {
          "type": "heading",
          "content": {
            "text": "All Products",
            "tag": "h1",
            "size": "3xl",
            "color": "gray-900",
            "weight": "bold",
            "margin_top": "4"
          }
        },
        {
          "type": "text",
          "content": {
            "text": "Discover our complete collection of quality products",
            "size": "lg",
            "color": "gray-600",
            "margin_top": "2"
          }
        }
      ]
    },
    {
      "id": "product-listing",
      "name": "Product Listing",
      "type": "content",
      "settings": {
        "background_color": "white",
        "padding_top": "40px",
        "padding_bottom": "80px"
      },
      "components": [
        {
          "type": "product-filters",
          "content": {
            "layout": "sidebar",
            "filters": [
              {
                "type": "search",
                "label": "Search Products",
                "placeholder": "Search for products..."
              },
              {
                "type": "category",
                "label": "Categories",
                "options": [
                  { "value": "electronics", "label": "Electronics", "count": 150 },
                  { "value": "fashion", "label": "Fashion", "count": 320 },
                  { "value": "home-garden", "label": "Home & Garden", "count": 210 },
                  { "value": "sports", "label": "Sports & Fitness", "count": 180 },
                  { "value": "books", "label": "Books & Media", "count": 95 },
                  { "value": "toys", "label": "Toys & Games", "count": 130 }
                ]
              },
              {
                "type": "price-range",
                "label": "Price Range",
                "min": 0,
                "max": 1000,
                "step": 10,
                "currency": "$"
              },
              {
                "type": "rating",
                "label": "Customer Rating",
                "options": [
                  { "value": "5", "label": "5 Stars", "count": 45 },
                  { "value": "4", "label": "4 Stars & Up", "count": 120 },
                  { "value": "3", "label": "3 Stars & Up", "count": 200 },
                  { "value": "2", "label": "2 Stars & Up", "count": 250 }
                ]
              },
              {
                "type": "brand",
                "label": "Brand",
                "options": [
                  { "value": "apple", "label": "Apple", "count": 25 },
                  { "value": "samsung", "label": "Samsung", "count": 30 },
                  { "value": "nike", "label": "Nike", "count": 40 },
                  { "value": "adidas", "label": "Adidas", "count": 35 },
                  { "value": "sony", "label": "Sony", "count": 20 }
                ]
              }
            ]
          }
        },
        {
          "type": "product-grid",
          "content": {
            "layout": "grid",
            "columns": 3,
            "products": "all",
            "pagination": true,
            "per_page": 24,
            "sorting": {
              "options": [
                { "value": "featured", "label": "Featured" },
                { "value": "price-low", "label": "Price: Low to High" },
                { "value": "price-high", "label": "Price: High to Low" },
                { "value": "newest", "label": "Newest First" },
                { "value": "rating", "label": "Highest Rated" },
                { "value": "bestseller", "label": "Best Sellers" }
              ],
              "default": "featured"
            },
            "view_options": ["grid", "list"],
            "show_filters_toggle": true,
            "product_card": {
              "show_image": true,
              "show_title": true,
              "show_price": true,
              "show_rating": true,
              "show_cart_button": true,
              "show_wishlist": true,
              "show_quick_view": true,
              "image_hover_effect": true
            }
          }
        }
      ]
    }
  ]
}